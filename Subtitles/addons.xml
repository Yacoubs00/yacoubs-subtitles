<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.yacoubs.subs" name="Yacoub's Subs Repository" version="1.0.0" provider-name="Yacoub">
        <extension point="xbmc.addon.repository" name="Yacoub's Subs Repository">
            <dir>
                <info compressed="false">https://yacoubs00.github.io/Subtitles/addons.xml</info>
                <checksum>https://yacoubs00.github.io/Subtitles/addons.xml.md5</checksum>
                <datadir zip="true">https://yacoubs00.github.io/Subtitles/</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Yacoub's Subtitle Addon Repository</summary>
            <description lang="en">Repository for Yacoub's Subs - A comprehensive subtitle addon with multiple providers</description>
            <platform>all</platform>
            <license>MIT</license>
            <website>https://github.com/Yacoubs00/yacoubs00.github.io</website>
            <source>https://github.com/Yacoubs00/yacoubs00.github.io</source>
            <news>v1.0.0: Initial release</news>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
    <addon id="service.subtitles.yacoubs" name="Yacoub's Subs" version="6.3.0" provider-name="Yacoub">
        <requires>
            <import addon="xbmc.python" version="3.0.0"/>
            <import addon="script.module.requests" version="2.22.0"/>
            <import addon="script.module.chardet" version="3.0.0"/>
        </requires>
        <extension point="xbmc.subtitle.module" library="main.py"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Yacoub's Subs - Multi-Provider Subtitle Addon</summary>
            <description lang="en">Comprehensive subtitle addon with 6 working providers: OpenSubtitles, Podnapisi, SubDL, SubSource, YIFY, Kitsunekko, and Witanime. Supports Arabic, English, and many other languages. Optimized for anime content.</description>
            <platform>all</platform>
            <license>MIT</license>
            <forum></forum>
            <website>https://github.com/Yacoubs00/yacoubs00.github.io</website>
            <source>https://github.com/Yacoubs00/yacoubs00.github.io</source>
            <news>v6.3.0: Removed AnimeTosho (provides torrents not subtitle files). 6 working providers: OpenSubtitles, Podnapisi, SubDL, SubSource, YIFY, Kitsunekko, Witanime. All core features work!</news>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
                <screenshot>screenshot-01.png</screenshot>
                <screenshot>screenshot-02.png</screenshot>
                <screenshot>screenshot-03.png</screenshot>
            </assets>
        </extension>
    </addon>
</addons>
